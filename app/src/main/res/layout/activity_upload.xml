<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/upload_MCV_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:id="@+id/upload_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/lavender_border">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/upload_BTN_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_close_24"
                android:background="@color/lavender"
                android:tint="@color/black"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/upload_TXT_addNewTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Transaction"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/lavender"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/upload_IMG_upload"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/uploadimg"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>
            
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/upload_edittext_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter transaction name"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/upload_edittext_amount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter transaction amount"
                android:inputType="number"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/upload_edittext_date"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter transaction date: day/month/year"
                android:gravity="start|center_vertical"
                android:textColor="@color/lavender"
                android:inputType="date" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/upload_BTN_save"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                app:cornerRadius="20dp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</ScrollView>