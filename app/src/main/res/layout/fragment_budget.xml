<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".Fragments.BudgetFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/budgetManager_FAB_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:backgroundTint="@color/lavender"
        android:clickable="true"
        android:src="@drawable/baseline_close_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/lavender_border"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/budgetManager_EDIT_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Enter Your Budget"
        android:textSize="45sp"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/lavender_border"
        android:textColorHint="@color/grey_500"
        android:inputType="number"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/budgetManager_BTN_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save Budget"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/yellow_600"/>

    </LinearLayout>

</RelativeLayout>